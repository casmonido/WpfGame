<UserControl x:Class="WpfGame.views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfGame.views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="BlueViolet">
    <Grid Grid.IsSharedSizeScope="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" SharedSizeGroup="ColumnSize"/>
            <ColumnDefinition Width="Auto" SharedSizeGroup="ColumnSize"/>
        </Grid.ColumnDefinitions>

        <local:ColorSchemeUserControl x:Name="colorPicker"
            Grid.Column="1" Grid.Row="0"
            HorizontalAlignment="Left" 
            Margin="28,10,0,0" VerticalAlignment="Top"/>
        <TextBlock Text="Color scheme" Grid.Column="0" Grid.Row="0"
                   HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
